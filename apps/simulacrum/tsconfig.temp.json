{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@bessemer/cornerstone": ["../../bessemer/cornerstone/src"],
      "@bessemer/cornerstone/*": ["../../bessemer/cornerstone/src/*"],
      "@bessemer/react": [ "../../bessemer/react/src"],
      "@bessemer/react/*": ["../../bessemer/react/src/*"],
      "@bessemer/mui": [ "../../bessemer/mui/src"],
      "@bessemer/mui/*": ["../../bessemer/mui/src/*"],
      "@bessemer/framework": ["../../bessemer/framework/src"],
      "@bessemer/framework/*": ["../../bessemer/framework/src/*"],
      "@bessemer/core": [ "../../bessemer/core/src"],
      "@bessemer/core/*": ["../../bessemer/core/src/*"],
      "@bessemer/foundry": ["../../bessemer/foundry/src"],
      "@bessemer/foundry/*": ["../../bessemer/foundry/src/*"],
      "@simulacrum": ["./"],
      "@simulacrum/*": ["./*"]
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
