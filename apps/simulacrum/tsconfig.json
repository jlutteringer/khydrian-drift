{
  "extends": "../../tsconfig.next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@simulacrum": [
        "./"
      ],
      "@simulacrum/*": [
        "./*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
