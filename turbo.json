{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build-turbo": {
      "dependsOn": ["^build-turbo"],
      "outputs": [".next/**", "dist/**"]
    },
    "dev-turbo": {
      "dependsOn": ["^build-turbo"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}