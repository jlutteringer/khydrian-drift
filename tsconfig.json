{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    "paths": {
      "@bessemer/cornerstone": ["./bessemer/cornerstone/src"],
      "@bessemer/cornerstone/*": ["./bessemer/cornerstone/src/*"],
      "@bessemer/react": ["./bessemer/react/src"],
      "@bessemer/react/*": ["./bessemer/react/src/*"],
      "@bessemer/mui": ["./bessemer/mui/src"],
      "@bessemer/mui/*": ["./bessemer/mui/src/*"],
      "@bessemer/framework": ["./bessemer/framework/src"],
      "@bessemer/framework/*": ["./bessemer/framework/src/*"],
      "@bessemer/core": ["./bessemer/core/src"],
      "@bessemer/core/*": ["./bessemer/core/src/*"],
      "@bessemer/foundry": ["./bessemer/foundry/src"],
      "@bessemer/foundry/*": ["./bessemer/foundry/src/*"],
      "@simulacrum": ["./apps/simulacrum"],
      "@simulacrum/*": ["./apps/simulacrum/*"]
    }
  },
  "exclude": ["node_modules"],
}